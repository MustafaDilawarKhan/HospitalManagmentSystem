<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hospitalmanagmentsystem.LoginController"
            style="-fx-background-color: #6DA4AA;">
    <children>
        <Label layoutX="40.0" layoutY="20.0" text="Username" textFill="BLACK">
            <font>
                <Font name="Tahoma Bold" size="16.0"/>
            </font>
        </Label>
        <Label layoutX="40.0" layoutY="70.0" text="Password" textFill="BLACK">
            <font>
                <Font name="Tahoma Bold" size="16.0"/>
            </font>
        </Label>
        <TextField fx:id="textField" layoutX="150.0" layoutY="20.0" promptText="Enter Username"
                   style="-fx-font-family: 'Tahoma'; -fx-font-size: 15; -fx-background-color: #FFB300;">
        </TextField>
        <PasswordField fx:id="passwordField" layoutX="150.0" layoutY="70.0" promptText="Enter Password"
                       style="-fx-font-family: 'Tahoma'; -fx-font-size: 15; -fx-background-color: #FFB300;">
        </PasswordField>
        <ImageView fx:id="imageView" fitHeight="300.0" fitWidth="400.0" layoutX="320.0" layoutY="-30.0">
            <image>

            </image>
        </ImageView>
        <Button fx:id="loginButton" layoutX="40.0" layoutY="140.0" mnemonicParsing="false" onAction="#handleLoginButton" text="Login"
                style="-fx-font-family: 'Serif Bold'; -fx-font-size: 15; -fx-background-color: black; -fx-text-fill: white;">
        </Button>
        <Button fx:id="cancelButton" layoutX="180.0" layoutY="140.0" mnemonicParsing="false" onAction="#handleCancelButton" text="Cancel"
                style="-fx-font-family: 'Serif Bold'; -fx-font-size: 15; -fx-background-color: black; -fx-text-fill: white;">
        </Button>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</AnchorPane>
                <Font size="14.0" />
            </font></Label>
        <ChoiceBox fx:id="choiceBox" layoutX="127.0" layoutY="77.0" />
        <TableView fx:id="tableView" layoutX="0" layoutY="187" prefHeight="210" prefWidth="700">
            <columns>
                <TableColumn fx:id="Room_NoColumn" prefWidth="150" text="Room Number" />
                <TableColumn fx:id="AvailabilityColumn" prefWidth="150" text="Availability" />
                <TableColumn fx:id="PriceColumn" prefWidth="150" text="Price" />
                <TableColumn fx:id="Room_TypeColumn" prefWidth="150" text="Room Type" />

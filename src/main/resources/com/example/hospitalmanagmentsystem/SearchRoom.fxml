<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hospitalmanagmentsystem.SearchRoomController">
    <children>
        <Label layoutX="49.0" layoutY="79.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Status :">

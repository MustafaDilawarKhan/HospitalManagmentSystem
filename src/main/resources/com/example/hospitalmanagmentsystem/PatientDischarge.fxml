<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="com.example.hospitalmanagmentsystem.PatientDischargeController">
    <children>
        <Label text="CHECK-OUT" layoutX="100" layoutY="20" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
        <Label text="Customer Id" layoutX="30" layoutY="80" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <ChoiceBox fx:id="choiceBox" layoutX="200" layoutY="80" />
        <Label text="Room Number" layoutX="30" layoutY="130" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <Label fx:id="roomLabel" layoutX="200" layoutY="130" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <Label text="Date In" layoutX="30" layoutY="180" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <Label fx:id="inDateLabel" layoutX="200" layoutY="180" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <Label text="Out Time" layoutX="30" layoutY="230" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <Label fx:id="outTimeLabel" layoutX="200" layoutY="230" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <Button fx:id="dischargeButton" text="Discharge" layoutX="30" layoutY="300" onAction="#handleDischarge" style="-fx-background-color: black; -fx-text-fill: white;" />
        <Button fx:id="checkButton" text="Check" layoutX="170" layoutY="300" onAction="#handleCheck" style="-fx-background-color: black; -fx-text-fill: white;" />
        <Button fx:id="backButton" text="Back" layoutX="300" layoutY="300" onAction="#handleBack" style="-fx-background-color: black; -fx-text-fill: white;" />
    </children>
</AnchorPane>

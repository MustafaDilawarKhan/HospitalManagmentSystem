<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="490.0" prefWidth="940.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hospitalmanagmentsystem.UpdatePatientController">
    <Pane prefHeight="497.0" prefWidth="940.0" style="-fx-background-color: #92ADFF;">
        <children>
            <Label layoutX="178.0" layoutY="11.0" prefHeight="49.0" prefWidth="481.0" text="Update Patient Details" textFill="#141414">
                <font>
                    <Font name="Calibri Bold" size="50.0" />
                </font>
            </Label>
            <Label layoutX="25.0" layoutY="88.0" text="Name :" textFill="#171717">
                <font>
                    <Font name="Calibri Bold" size="21.0" />
                </font>
            </Label>
            <Label layoutX="25.0" layoutY="129.0" text="Room Number :" textFill="#171717">
                <font>
                    <Font name="Calibri Bold" size="21.0" />
                </font>
            </Label>
            <TextField fx:id="textFieldRoom" layoutX="248.0" layoutY="129.0" />
            <Label layoutX="25.0" layoutY="171.0" text="Amount Paid (Rs) :" textFill="#171717">
                <font>
                    <Font name="Calibri Bold" size="21.0" />
                </font>
            </Label>
            <TextField fx:id="textFieldAmount" layoutX="248.0" layoutY="170.0" />
            <Label layoutX="25.0" layoutY="216.0" text="Disease" textFill="#171717">
                <font>
                    <Font name="Calibri Bold" size="21.0" />
                </font>
            </Label>
            <TextField fx:id="textFieldDisease" layoutX="248.0" layoutY="213.0" />
            <Button fx:id="check" layoutX="375.0" layoutY="323.0" mnemonicParsing="false" onAction="#handleCheck" style="-fx-background-color: black;" text="CHECK" textAlignment="CENTER" textFill="WHITE" />
            <Button fx:id="update" contentDisplay="CENTER" layoutX="220.0" layoutY="322.0" mnemonicParsing="false" onAction="#handleUpdate" style="-fx-background-color: black;" text="UPDATE" textFill="WHITE" />
            <Button fx:id="back" layoutX="500.0" layoutY="322.0" mnemonicParsing="false" onAction="#handleBack" style="-fx-background-color: black;" text="BACK" textFill="WHITE" />
            <ComboBox fx:id="nameComboBox" layoutX="247.0" layoutY="85.0" prefWidth="150.0" />
        </children>
    </Pane>
</AnchorPane>
